<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andorn.tasktags" 
    android:versionCode="1" 
    android:versionName="0.5.1.0">
    <!--  C2DM requires Android SDK version 2.2 (API level 8) or above -->
    <uses-sdk android:minSdkVersion="8" />

    <!-- Permission for internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to keep the processor from sleeping -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Permission to retrieve the list of accounts in the Accounts Service -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Permission to request authtokens from the AccountManager -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application 
	    android:icon="@drawable/title" 
	    android:debuggable="true"
	    android:label="@string/app_name"
        android:name="com.andorn.tasktags.TaskApplication" 
        android:theme="@style/Theme.IOSched">
		
		<service android:name="com.andorn.tasktags.services.TasksAppService" />
        <!--  Main activity -->        
<!--             android:theme="@style/Theme.IOSched.Home" -->
<!--         	android:label="@string/app_name" -->
        <activity 
        	android:name=".activities.GooTaskListsActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>         
        </activity>        
        <activity android:name=".activities.GooTasksActivity" />
        <activity android:name=".activities.GooTaskEditActivity" />
        <activity android:name=".activities.GooTaskViewActivity" />
        <activity android:name=".activities.GooAccountsActivity" />    
        <activity android:name=".activities.TCTagListActivity" />      
        <activity android:name=".activities.GeneralSettingsActivity" />   
        
    </application>
</manifest>
