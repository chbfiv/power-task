<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"	
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
  	android:id="@+id/tasks_header"
    android:paddingLeft="3dip"
    android:paddingRight="3dip"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:background="#4c4c4c">
    <ImageView
        android:layout_width="20dip"
        android:layout_height="20dip"
      	android:id="@+id/tasks_sort_header_prevArrow"
        android:src="@drawable/ic_btn_find_prev"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" />  
    <ImageView
        android:layout_width="20dip"
        android:layout_height="20dip"
      	android:id="@+id/tasks_sort_header_nextArrow"
        android:src="@drawable/ic_btn_find_next"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" />  
	<TextView  
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content" 
		android:id="@+id/tasks_sort_header_left"
	   	android:maxWidth="70dip"
	   	android:text="@string/example_task_sort"
        android:singleLine="true"
        android:textColor="#dedede"
		android:textSize="@dimen/text_size_small"
		android:ellipsize="end"
		android:layout_centerVertical="true" 
		android:layout_toRightOf="@+id/tasks_sort_header_prevArrow"/>
	<TextView  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
      	android:id="@+id/tasks_sort_header_right"
	   	android:maxWidth="70dip"
        android:text="@string/example_task_sort"
        android:singleLine="true"
        android:textColor="#dedede"
		android:textSize="@dimen/text_size_small"
		android:ellipsize="start"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/tasks_sort_header_nextArrow" />
	<TextView  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
      	android:id="@+id/tasks_sort_header_center"
        android:text="@string/example_task_sort"
        android:singleLine="true"
        android:background="#4c4c4c"
        android:textColor="@android:color/white"
		android:textSize="@dimen/text_size_small"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true" />
</RelativeLayout> 

